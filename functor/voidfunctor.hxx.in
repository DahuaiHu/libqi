#ifndef  AL_MESSAGING_VOID_FUNCTOR_HXX_
# define AL_MESSAGING_VOID_FUNCTOR_HXX_

# include <alcommon-ng/functor/functor.hpp>

namespace AL
{
//HEADER

  template<%(TypeNameList)s>
  class Functor_%(count)d<%(TypeListSep)svoid> : public Functor
  {
  public:
    typedef void(*FunctionType) (%(ParamList)s);

    Functor_%(count)s(FunctionType pFunction)
      : fFunction(pFunction)
    {}

    void operator()(%(ParamList)s) {
      (*fFunction)(%(ArgList)s);
    }

    void call(const AL::Messaging::ArgumentList &params, AL::Messaging::ReturnValue&) {
      AL_FUNCTOR_ASSUME_NBR_PARAMS(pParams, %(count)d);
      (*fFunction)(%(CallParamList)s);
    };

  private:
    FunctionType  fFunction;
  };

//FOOTER
}
#endif
