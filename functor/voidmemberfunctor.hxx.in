#ifndef  AL_MESSAGING_VOID_MEMBER_FUNCTOR_HXX_
# define AL_MESSAGING_VOID_MEMBER_FUNCTOR_HXX_

# include <alcommon-ng/functor/functor.hpp>

namespace AL
{
//HEADER

  template <%(TypeNameListSep)stypename C>
  class MemberFunctor_%(count)d<%(TypeListSep)sC, void> : public Functor
  {
  public:
    typedef void(C::*FunctionType) (%(ParamList)s);

    MemberFunctor_%(count)s(C *pObject, FunctionType pFunction)
      : fObject(pObject),
        fFunction(pFunction) {
    }

    void operator()(%(ParamList)s) {
      (fObject->*fFunction)(%(ArgList)s);
    }

    void call(const AL::Messaging::ArgumentList &params, AL::Messaging::ReturnValue&) {
      AL_FUNCTOR_ASSUME_NBR_PARAMS(params, %(count)d);
      (fObject->*fFunction)(%(CallParamList)s);
    };

  private:
    C            *fObject;
    FunctionType  fFunction;
  };

//FOOTER
}
#endif
