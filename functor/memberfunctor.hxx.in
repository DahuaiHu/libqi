#ifndef  AL_MESSAGING_MEMBER_FUNCTOR_HXX_
# define AL_MESSAGING_MEMBER_FUNCTOR_HXX_

# include <alcommon-ng/functor/functor.hpp>

namespace AL
{
//HEADER

  template <%(TypeNameListSep)stypename C, typename R>
  class MemberFunctor_%(count)d : public Functor
  {
  public:
    typedef R(C::*FunctionType) (%(ParamList)s);

    MemberFunctor_%(count)d(C *pObject, FunctionType pFunction)
      : fObject(pObject),
        fFunction(pFunction)
    {}

    R operator()(%(ParamList)s) {
      return (R)(fObject->*fFunction)(%(ArgList)s);
    }

    void call(const AL::Messaging::ArgumentList &params, AL::Messaging::ReturnValue& result) {
      AL_FUNCTOR_ASSUME_NBR_PARAMS(params, %(count)d);
      result.value((fObject->*fFunction)(%(CallParamList)s));
    };

  private:
    C            *fObject;
    FunctionType  fFunction;
  };

//FOOTER
}
#endif
