#ifndef  AL_MESSAGING_MAKE_FUNCTOR_HPP_
# define AL_MESSAGING_MAKE_FUNCTOR_HPP_

#include <alcommon-ng/functor/functor.hpp>

namespace AL
{
//HEADER

  template <%(TypeNameListSep)stypename C, typename R>
  Functor *makeFunctor(C *obj, R (C::*f) (%(ParamList)s)) {
    return new MemberFunctor_%(count)d<%(TypeListSep)sC, R>(obj, f);
  }

  template <%(TypeNameListSep)stypename R>
  Functor *makeFunctor(R (*f) (%(ParamList)s)) {
    return new Functor_%(count)d<%(TypeListSep)sR>(f);
  }

//FOOTER
}
#endif
