#ifndef  AL_MESSAGING_CALL_FUNCTOR_HPP_
# define AL_MESSAGING_CALL_FUNCTOR_HPP_

#include <alcommon-ng/collections/variables_list.hpp>
#include <alcommon-ng/functor/functor.hpp>

namespace AL
{
//HEADER

  template <typename R%(SepTypeNameList)s>
  R callFunctor(Functor *f%(SepParamList)s) {
    AL::Messaging::ArgumentList  args;
    AL::Messaging::VariableValue ret;

    %(ArgsPushList)s
    f->call(args, ret);
    return ret.as<R>();
  }

  template <%(TypeNameList)s>
  void callVoidFunctor(Functor *f%(SepParamList)s) {
    AL::Messaging::ArgumentList  args;
    AL::Messaging::VariableValue ret;

    %(ArgsPushList)s
    f->call(args, ret);
  }

//FOOTER
}
#endif
