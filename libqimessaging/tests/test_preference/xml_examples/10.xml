<?xml version="1.0" encoding="UTF-8" ?>
<ModulePreference name="aldebaran-robotics.com@AudioInput" xmlns="http://www.aldebaran-robotics.com/ns/ALPreference" schemaLocation="ModulePreference.xsd">

    <Preference name="deviceName" description="Name of the sound device" type="string" value="hw:0,0"/>   				<!-- default on nao: "hw:0,0" -->
    <Preference name="numberOfInputChannels" description="Number of audio channels available" type="int" value="4"/>    <!-- default on nao: "4" -->
    <Preference name="samplingRate" description="Sample rate of every channel" type="int" value="48000"/>   			<!-- default on nao: "48000" -->
    <Preference name="latencyInMs" description="latency of the driver alsa" type="int" value="500"/>   					<!-- default on nao: "500" -->
    <Preference name="tempDirectory" description="path where to put temp file" type="string" value="/var/volatile/"/>  	<!-- default on nao: "/var/volatile/" -->

    <!-- Should be 2 or 4 -->
    <Preference name="numberOfMicrophones" description="Number of microphones to use" type="int" value="4"/>
	<Preference name="acapelaAsrDataPath" description="Path to acapela ASR files" type="string" value="/usr/share/acapela/asr/languages/" />

</ModulePreference>
